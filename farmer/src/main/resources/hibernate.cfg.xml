<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/DayBase</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <mapping class="com.varunasoft.farmer.domain.AccountDetails"/>
        <mapping class="com.varunasoft.farmer.domain.AddressFarmer"/>
        <mapping class="com.varunasoft.farmer.domain.BankDetails"/>
        <mapping class="com.varunasoft.farmer.domain.EducationDetails"/>
        <mapping class="com.varunasoft.farmer.domain.FarmersDetails"/>
        <mapping class="com.varunasoft.farmer.domain.LandDetails"/>
        <mapping class="com.varunasoft.farmer.domain.PincodeDetails"/>
    </session-factory>
</hibernate-configuration>
